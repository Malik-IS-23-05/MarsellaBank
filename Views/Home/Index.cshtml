@{
    ViewData["Title"] = "Банковский портал";
}

<div class="welcome-container">
    <h1>Добро пожаловать в Marsella Bank</h1>

    <div class="auth-links">
        <a asp-controller="Auth" asp-action="Login" class="btn">Вход</a>
        <a asp-controller="Auth" asp-action="Register" class="btn">Регистрация</a>
    </div>
</div>

<style>
    .welcome-container {
        text-align: center;
        margin-top: 50px;
    }

    .auth-links {
        margin-top: 30px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 0 10px;
        background: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }

    .btn:hover {
        background: #45a049;
    }
</style>
